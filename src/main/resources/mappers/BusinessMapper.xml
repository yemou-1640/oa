<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yemou.oa.dao.BusinessMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.yemou.oa.pojo.Business">
        <result column="tid" property="tid" />
        <result column="destination" property="destination" />
        <result column="startDate" property="startDate" />
        <result column="endDate" property="endDate" />
        <result column="reason" property="reason" />
        <result column="status" property="bstatus" />
        <result column="approvedByUserId" property="approvedByUserId" />
        <result column="approvalTime" property="approvalTime" />
        <result column="created" property="created" />
        <result column="updated" property="updated" />
    </resultMap>

    <!-- 根据状态统计出差申请数量 -->
    <select id="countByStatus" resultType="int">
        SELECT COUNT(*)
        FROM o_business
        WHERE bstatus = #{bstatus}
    </select>

</mapper>
